{
  "manifest_version": 3,
  "name": "Vocab Recorder",
  "version": "1.0.0",
  "description": "Record and learn new vocabulary while browsing",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://localhost:5173/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Vocab Recorder"
  },
  "options_page": "options/options.html"
}
